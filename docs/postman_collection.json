{
  "info": {
    "name": "Splice API",
    "description": "Wallet lifecycle collection for the Splice API â€” HackIllinois 2026.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" },
    { "key": "api_key", "value": "your-api-key-here" },
    { "key": "wallet_id", "value": "" },
    { "key": "wallet_public_key", "value": "" }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health"
      }
    },
    {
      "name": "1. Create Wallet",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "pm.collectionVariables.set('wallet_id', res.wallet_id);",
              "pm.collectionVariables.set('wallet_public_key', res.public_key);",
              "console.log('wallet_id:', res.wallet_id);",
              "console.log('wallet_public_key:', res.public_key);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/v1/wallets"
      }
    },
    {
      "name": "2. Deposit (Stripe Checkout)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"success_url\": \"http://localhost:5173/demo/stripe-success\",\n  \"cancel_url\": \"http://localhost:5173/demo/stripe-cancel\",\n  \"amount_usd\": 0.5\n}"
        },
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}/deposit"
      }
    },
    {
      "name": "2b. Simulate Stripe Checkout Webhook (local)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "stripe-signature", "value": "test-signature" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"checkout.session.completed\",\n  \"data\": {\n    \"object\": {\n      \"metadata\": { \"player_id\": \"{{wallet_id}}\" },\n      \"client_reference_id\": \"{{wallet_id}}\",\n      \"amount_total\": 50,\n      \"payment_status\": \"paid\"\n    }\n  }\n}"
        },
        "url": "{{base_url}}/v1/webhooks/stripe"
      }
    },
    {
      "name": "3. Get Wallet (check balances)",
      "request": {
        "method": "GET",
        "header": [{ "key": "X-API-Key", "value": "{{api_key}}" }],
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}"
      }
    },
    {
      "name": "3b. Get Wallet Transactions",
      "request": {
        "method": "GET",
        "header": [{ "key": "X-API-Key", "value": "{{api_key}}" }],
        "url": {
          "raw": "{{base_url}}/v1/wallets/{{wallet_id}}/transactions?limit=10",
          "host": ["{{base_url}}"],
          "path": ["v1", "wallets", "{{wallet_id}}", "transactions"],
          "query": [{ "key": "limit", "value": "10" }]
        }
      }
    },
    {
      "name": "4. Transfer (credit wallet)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "{{$guid}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount_usdc\": \"2.00\",\n  \"note\": \"prize winnings\"\n}"
        },
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}/transfer"
      }
    },
    {
      "name": "4b. Transfer (debit wallet)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "{{$guid}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount_usdc\": \"-0.50\",\n  \"note\": \"entry fee\"\n}"
        },
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}/transfer"
      }
    },
    {
      "name": "5. Withdraw",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount_usdc\": 0.5\n}"
        },
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}/withdraw"
      }
    },
    {
      "name": "6. Connect (Stripe onboarding)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/v1/wallets/{{wallet_id}}/connect"
      }
    },
    {
      "name": "7. Cleanup Inactive Wallets (dry run)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "{{api_key}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"dry_run\": true,\n  \"grace_hours\": 168\n}"
        },
        "url": "{{base_url}}/v1/wallets/cleanup-inactive"
      }
    }
  ]
}
