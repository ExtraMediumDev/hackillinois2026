PORT=3000
API_KEY=your-api-key-here

# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=<64-char hex, openssl rand -hex 32>

# Upstash Redis (create at console.upstash.com)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=<token>

# Helius RPC (get key at dev.helius.xyz)
SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_KEY

# Solana authority keypair (path to ~/.config/solana/id.json)
AUTHORITY_KEYPAIR_PATH=/path/to/.config/solana/id.json

# Deployed Anchor program ID (after: anchor deploy --provider.cluster devnet)
PROGRAM_ID=<deployed Anchor program ID>

# Stripe (get at dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Demo mode: withdraws route to one configured connected account
DEMO_PAYOUT_MODE=false
DEMO_PAYOUT_DESTINATION_CONNECT_ACCOUNT_ID=acct_...
# Demo payout settlement mode:
# true  = simulate fiat payout success (recommended for hackathon demos)
# false = attempt real Stripe transfer/payout and require Stripe test balance
DEMO_PAYOUT_SIMULATE=true

# USDC devnet mint
USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Player lifecycle cleanup grace period (hours)
PLAYER_INACTIVE_GRACE_HOURS=168
